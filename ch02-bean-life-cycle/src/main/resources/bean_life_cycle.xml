<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="demoCustomInitId"
        class="com.giuseppe.pinto.beans.custom.DemoCustomInit"
        init-method="myInit"
        destroy-method="myDestroy">
  </bean>

  <bean id="demoInitializingBeanId"
        class="com.giuseppe.pinto.beans.initializingbean.DemoInitializingBean">
  </bean>

  <bean id="disposableBeanId"
        class="com.giuseppe.pinto.beans.disposablebean.DemoDisposableBean">
  </bean>

</beans>